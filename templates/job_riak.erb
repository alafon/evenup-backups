  ##
  # Riak config
  #

  Utilities.configure do
    riak_admin '/usr/sbin/riak-admin'
  end

  archive :riak_config do |archive|
    archive.add "/etc/riak"
  end

  ##
  # Riak [Database]
  #
  database Riak, :<%= @database_id_real %> do |db|
    db.node   = "riak@<%= scope.lookupvar('::fqdn') %>"
    db.cookie = "<%= @cookie %>"
  end
